rule area_distance:
    input:
        tss = "{prefix}/data/{folder}/{tss_or_tes}.bed",
        data = "{prefix}/data/align/{sample}.bed"
    output:
        "{prefix}/data/{folder}/{tss_or_tes}_{sample}.area_distance"
    wildcard_constraints:
        tss_or_tes = "(tss|tes)"
    conda:
        "../../envs/area_distance.yaml"
    script:
        "../../scripts/area_distance.py"
